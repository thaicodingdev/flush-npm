{
  "name": "flush-npm",
  "version": "1.0.7",
  "description": "Remove node_modules/ and package-lock.json, then run `npm install`",
  "bin": {
    "flush-npm": "cli.js"
  },
  "main": "cli.js",
  "scripts": {
    "postinstall": "npm run build",
    "build": "esbuild src/cli.ts --bundle --platform=node --outfile=cli.js",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "prepack": "npm run build",
    "test": "jest --coverage --coverageReporters='text'",
    "lint": "eslint --fix",
    "format": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thaicodingdev/flush-npm.git"
  },
  "keywords": [
    "npm"
  ],
  "author": "thaicodingdev <thaicodingstudio@gmail.com> (https://thaicoding.dev/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thaicodingdev/flush-npm/issues"
  },
  "homepage": "https://github.com/thaicodingdev/flush-npm#readme",
  "dependencies": {
    "del": "6.0.0",
    "npm-run": "5.0.1",
    "ora": "5.4.0"
  },
  "devDependencies": {
    "@thaicoding/eslint-config": "2.0.0",
    "@thaicoding/prettier-config": "1.2.1",
    "@types/jest": "26.0.22",
    "@types/node": "14.14.39",
    "@typescript-eslint/parser": "4.22.0",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.11.11",
    "esbuild-jest": "0.5.0",
    "eslint": "7.24.0",
    "fsify": "4.0.2",
    "jest": "26.6.3",
    "jest-mock-process": "1.4.0",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "simple-git-hooks": "2.3.1",
    "ts-node": "9.1.1",
    "typescript": "4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run format"
    ]
  }
}
