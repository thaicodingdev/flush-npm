{
  "name": "flush-npm",
  "version": "1.0.3",
  "description": "Remove node_modules/ and package-lock.json, then run `npm install`",
  "bin": {
    "flush-npm": "./cli.js"
  },
  "main": "cli.js",
  "scripts": {
    "build": "esbuild src/cli.ts --bundle --platform=node --outfile=cli.js && chmod +x cli.js",
    "prepack": "npm run build",
    "pretest": "npm run build",
    "test": "jest --coverage --coverageReporters='text'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thaicodingdev/flush-npm.git"
  },
  "keywords": [
    "npm"
  ],
  "author": "thaicodingdev <thaicodingstudio@gmail.com> (https://thaicoding.dev/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thaicodingdev/flush-npm/issues"
  },
  "homepage": "https://github.com/thaicodingdev/flush-npm#readme",
  "dependencies": {
    "execa": "5.0.0",
    "ora": "5.4.0"
  },
  "devDependencies": {
    "@thaicoding/eslint-config": "2.0.0",
    "@thaicoding/prettier-config": "1.2.1",
    "@types/jest": "26.0.22",
    "@types/node": "14.14.37",
    "@typescript-eslint/parser": "4.20.0",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.11.10",
    "esbuild-jest": "0.5.0",
    "fsify": "4.0.2",
    "jest": "26.6.3",
    "ts-jest": "26.5.4",
    "ts-node": "9.1.1",
    "typescript": "4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
